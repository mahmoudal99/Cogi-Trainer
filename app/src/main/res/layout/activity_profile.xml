<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.ProfileActivity"
    android:background="@color/outline">

    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_width="match_parent"
        android:background="@drawable/signupbg"
        android:layout_height="350dp">

        <RelativeLayout
            android:id="@+id/relLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back_white"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:layout_centerInParent="true"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/trainer_default_img"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/editProfImgTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile"
                android:fontFamily="serif-monospace"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="@string/edit"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/relLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/relLayout2"

            android:layout_marginTop="50dp"
            android:layout_width="@dimen/CardViewWidth"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_profile"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/nameEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="50dp"
                android:background="@null"
                android:fontFamily="serif-monospace"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayout3"
            android:layout_below="@id/relLayout2"
            android:layout_marginTop="10dp"
            android:layout_width="@dimen/CardViewWidth"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/surnameEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="50dp"
                android:background="@null"
                android:fontFamily="serif-monospace"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayout4"
            android:layout_below="@id/relLayout3"
            android:layout_marginTop="10dp"
            android:layout_width="@dimen/CardViewWidth"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/usernameEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="50dp"
                android:background="@null"
                android:fontFamily="serif-monospace"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayout5"
            android:layout_below="@id/relLayout4"
            android:layout_marginTop="10dp"
            android:layout_width="@dimen/CardViewWidth"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_email"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/emailEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="50dp"
                android:background="@null"
                android:fontFamily="serif-monospace"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

        </RelativeLayout>

            <TextView
                android:id="@+id/editProfileTv"
                android:layout_below="@id/relLayout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="30dp"
                android:background="@null"
                android:text="@string/edit_profile"
                android:layout_marginTop="20dp"
                android:fontFamily="serif-monospace"
                android:textColor="@color/blueCardView"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/changePasswordTv"
                android:layout_below="@id/editProfileTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="30dp"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:text="@string/change_password"
                android:fontFamily="serif-monospace"
                android:textColor="@color/blueCardView"
                android:textSize="20sp"
                android:textStyle="bold" />
        <TextView
            android:id="@+id/logoutTv"
            android:layout_below="@id/changePasswordTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="30dp"
            android:background="@null"
            android:layout_marginTop="10dp"
            android:text="Log Out"
            android:fontFamily="serif-monospace"
            android:textColor="@color/blueCardView"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>



















