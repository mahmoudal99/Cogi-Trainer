<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="onipractice.mahmoud.com.fitnessapp">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <permission
        android:name="onipractice.mahmoud.com.fitnessapp.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="onipractice.mahmoud.com.fitnessapp.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Jogging.JoggingActivity"
            tools:ignore="InnerclassSeparator" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAqcP5mwNElnbv51O6oHdG83jwn6LTaV24" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Jogging.JoggingTrackingActivity"
            android:label="@string/title_activity_jogging_tracking"
            tools:ignore="InnerclassSeparator" />

        <service android:name=".CloudMessaging.FirebaseInstanceIdService"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <service android:name=".CloudMessaging.FirebaseMessagingService"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".SignInActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SignUpActivity" />

        <activity android:name=".ChooseUserTypeActivity" />

        <activity android:name=".Trainer.PersonalTrainerHomeActivity"
            tools:ignore="InnerclassSeparator" />

        <activity
            android:name=".TraineeHomeActivity"
            android:noHistory="true" />
        <activity android:name=".TraineePersonalDetailsActivity" />

        <activity android:name=".Profile.ProfileActivity"
            tools:ignore="InnerclassSeparator" />

        <activity android:name=".Profile.EditProfileActivity"
            tools:ignore="InnerclassSeparator" />

        <activity android:name=".Profile.ChangePasswordActivity"
            tools:ignore="InnerclassSeparator" />

        <activity
            android:name=".ProgressGalleryActivity"
            android:label="@string/title_activity_progress_gallery"
            android:theme="@style/AppTheme" />

        <activity android:name=".Client.ClientProfileActivity"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="onipractice.mahmoud.com.fitnessapp_TARGET_NOTIFICATION" />

                <category android:name="android.intent.category.DEFAUT" />
            </intent-filter>
        </activity>

        <activity android:name=".Trainer.MyTrainerActivity"
            tools:ignore="InnerclassSeparator" />

        <activity android:name=".Messaging.MessengerActivity"
            tools:ignore="InnerclassSeparator" />

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <activity android:name=".Trainer.TrainerPersonalDetailsActivity"
            tools:ignore="InnerclassSeparator" />

        <activity android:name=".Trainer.AddTrainerActivity"
            tools:ignore="InnerclassSeparator" />

        <activity android:name=".Client.ClientRequestsActivity"
            tools:ignore="InnerclassSeparator" />

        <activity android:name=".Client.ClientsActivity"
            tools:ignore="InnerclassSeparator" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".TimetableActivity" />
        <activity android:name=".DietActivity" />
        <activity android:name=".SearchFoodActivity" />

        <activity android:name=".Training.StretchingActivity"
            tools:ignore="InnerclassSeparator" />

    </application>

</manifest>