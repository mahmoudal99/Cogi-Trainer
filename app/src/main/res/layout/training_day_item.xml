<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/rlRow"

    android:layout_marginTop="10dp"

    android:layout_width="match_parent"

    android:layout_height="wrap_content"

    android:background="@drawable/red_bg">



    <RelativeLayout

        android:id="@+id/timetableSlotIcon"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_centerVertical="true">



        <TextView

            android:id="@+id/row_icon"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"

            android:text="M"

            android:textColor="@color/white"

            android:textSize="50sp"

            app:fontFamily="@font/comfortaa" />



    </RelativeLayout>





    <LinearLayout

        android:id="@+id/module_info_linLayout"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"

        android:duplicateParentState="true"

        android:gravity="center_vertical"

        android:orientation="vertical"

        android:layout_toRightOf="@+id/timetableSlotIcon">



        <LinearLayout

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:orientation="horizontal">



            <TextView

                android:id="@+id/training_workout_Tv"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:duplicateParentState="true"

                android:maxLines="1"

                android:text="Workout"

                android:textColor="@color/white"

                android:textSize="24sp"

                android:fontFamily="serif-monospace" />



        </LinearLayout>



        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="horizontal">



            <ImageView

                android:id="@+id/time_icon_IV"

                android:layout_width="38dp"

                android:layout_height="38dp"

                android:layout_weight="1"

                android:src="@drawable/ic_calendar" />



            <TextView

                android:id="@+id/training_day_Tv"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"

                android:layout_weight="8"

                android:duplicateParentState="true"

                android:fontFamily="serif-monospace"

                android:text="Day"

                android:textColor="@color/white"

                android:textSize="18sp" />



            <ImageView

                android:id="@+id/delete"

                android:layout_width="30dp"

                android:layout_height="30dp"

                android:layout_marginEnd="15dp"

                android:layout_marginRight="15dp"

                android:layout_weight="1"

                android:src="@drawable/ic_delete" />



        </LinearLayout>



        <LinearLayout

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:orientation="horizontal">



            <ImageView

                android:id="@+id/cal_icon_IV"

                android:layout_width="32dp"

                android:layout_height="32dp"

                android:src="@drawable/ic_time_white"/>



            <TextView

                android:id="@+id/training_time_Tv"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:duplicateParentState="true"

                android:layout_gravity="center_vertical"

                android:maxLines="1"

                android:text="Time"

                android:textColor="@color/white"

                android:textSize="18sp"

                android:fontFamily="serif-monospace" />



        </LinearLayout>



    </LinearLayout>





</RelativeLayout>