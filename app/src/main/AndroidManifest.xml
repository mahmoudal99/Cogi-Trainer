<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="onipractice.mahmoud.com.fitnessapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service android:name=".CloudMessaging.FirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".CloudMessaging.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".SignInActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".ChoosePreferenceActivity" />
        <activity android:name=".Trainer.PersonalTrainerHomeActivity" />
        <activity
            android:name=".TraineeHomeActivity"
            android:noHistory="true" />
        <activity android:name=".TraineePersonalDetailsActivity" />
        <activity android:name=".Profile.ProfileActivity" />
        <activity android:name=".Profile.EditProfileActivity" />
        <activity android:name=".Profile.ChangePasswordActivity" />
        <activity
            android:name=".ProgressGalleryActivity"
            android:label="@string/title_activity_progress_gallery"
            android:theme="@style/AppTheme" />
        <activity android:name=".Messaging.MessagingActivity" />
        <activity android:name=".Client.ClientProfileActivity">
            <intent-filter>
                <action android:name="onipractice.mahmoud.com.fitnessapp_TARGET_NOTIFICATION" />

                <category android:name="android.intent.category.DEFAUT" />
            </intent-filter>
        </activity>
        <activity android:name=".Trainer.MyTrainerActivity" />
        <activity android:name=".Messaging.ChatActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".GalleryActivity" />
        <activity android:name=".Trainer.TrainerPersonalDetailsActivity" />
        <activity android:name=".Trainer.AddTrainerActivity" />
        <activity android:name=".Client.ClientRequestsActivity" />
        <activity android:name=".Client.ClientsActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".TimetableActivity" />
        <activity android:name=".DietActivity" />
        <activity android:name=".SearchFoodActivity" />
        <activity android:name=".TrainingActivity" />
        <activity android:name=".Training.CardioActivity" />
        <activity android:name=".Training.WeightsActivity" />
        <activity android:name=".Training.StretchingActivity" />
        <activity android:name=".TrackerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".TrackerService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".Training.RunningActivity"></activity>
    </application>

</manifest>