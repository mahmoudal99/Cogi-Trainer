<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efeff4"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back_arrow_black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:text="Settings"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:fontFamily="@font/pompiere" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="ACCOUNT"
            android:textSize="@dimen/_17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/accountLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/AccountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="10dp"
                    android:text="Account"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sp" />

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:text="Email"
                    android:textColor="#9E9E9E"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/arrow_grey" />

                <ImageView
                    android:layout_width="500dp"
                    android:layout_height="3dp"
                    android:layout_alignBottom="@id/AccountTextView"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/divider" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/locationLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/locationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="10dp"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sp" />


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/arrow_grey" />

                <ImageView
                    android:layout_width="500dp"
                    android:layout_height="3dp"
                    android:layout_alignBottom="@id/locationTextView"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/divider" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/notificationLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/notificationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="10dp"
                    android:text="Notification"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sp" />


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/arrow_grey" />

                <ImageView
                    android:layout_width="500dp"
                    android:layout_height="3dp"
                    android:layout_alignBottom="@id/notificationTextView"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/divider" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/genderLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/genderTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="10dp"
                    android:text="Gender"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sp" />


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/arrow_grey" />

                <ImageView
                    android:layout_width="500dp"
                    android:layout_height="3dp"
                    android:layout_alignBottom="@id/genderTextView"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/divider" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/heightLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/heightTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="10dp"
                    android:text="Height"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sp" />


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/arrow_grey" />

                <ImageView
                    android:layout_width="500dp"
                    android:layout_height="3dp"
                    android:layout_alignBottom="@id/heightTextView"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/divider" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/weightLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/weightTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="10dp"
                    android:text="Weight"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sp" />


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/arrow_grey" />

                <ImageView
                    android:layout_width="500dp"
                    android:layout_height="3dp"
                    android:layout_alignBottom="@id/weightTextView"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/divider" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="LOG OUT"
            android:textSize="@dimen/_17sp" />

        <LinearLayout
            android:id="@+id/logoutLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/logoutTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="70dp"
                    android:paddingBottom="10dp"
                    android:text="Log Out"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/logout" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>