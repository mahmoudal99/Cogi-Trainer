<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chatBg"
    tools:context=".Messaging.ChatActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/outline"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_back_white"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/receiver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="User_Name"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/lastSeenTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Last Seen"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_above="@id/bottom"
        android:layout_alignBaseline="@id/bottom"
        android:background="@color/chatBg">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/messagesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@id/bottom"
            android:layout_marginTop="57dp">

        </android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImg"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        app:civ_border_width="2dp"
        android:layout_gravity="center_vertical"
        app:civ_circle_background_color="@color/outline"
        app:civ_border_color="@color/outline"
        android:src="@drawable/ic_add"/>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/chat_send_bar_bg"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/messageEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Send Message"
            android:layout_marginLeft="15dp"
            android:textColorHint="@color/grey"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:background="@null"
            android:layout_weight="8"/>

       <ImageView
           android:id="@+id/sendBtn"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_weight="1"
           android:layout_gravity="center_vertical"
           android:src="@drawable/ic_send_blue"/>

    </LinearLayout>


</RelativeLayout>