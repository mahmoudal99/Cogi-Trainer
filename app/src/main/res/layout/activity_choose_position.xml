<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context=".ChoosePreferenceActivity">



    <LinearLayout

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:orientation="vertical"

        android:layout_gravity="center_horizontal|center_vertical">



        <RelativeLayout

            android:id="@+id/personalTrainerRL"

            android:layout_width="@dimen/RelativeLayoutWidth"

            android:layout_height="@dimen/RelativeLayoutHeight"

            android:layout_marginBottom="30dp"

            android:background="@drawable/blue_bg">



            <ImageView

                android:id="@+id/personalTrainerIv"

                android:layout_width="@dimen/OptionImageViewWidth"

                android:layout_height="@dimen/OptionImageViewHeight"

                android:layout_alignParentTop="true"

                android:layout_centerHorizontal="true"

                android:layout_marginTop="15dp"

                android:src="@drawable/final_logo_no_text" />



            <ImageView

                android:layout_below="@+id/personalTrainerIv"

                android:layout_width="250dp"

                android:layout_height="250dp"

                android:layout_centerInParent="true"

                android:src="@drawable/personal_trainer_text" />



        </RelativeLayout>



        <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="OR"

            android:layout_gravity="center"

            android:textSize="40sp"

            android:fontFamily="serif-monospace"

            android:textColor="@color/black"/>



        <RelativeLayout

            android:id="@+id/traineeRL"

            android:layout_width="@dimen/RelativeLayoutWidth"

            android:layout_height="@dimen/RelativeLayoutHeight"

            android:layout_marginTop="30dp"

            android:background="@drawable/blue_bg">



            <ImageView
                android:id="@+id/traineeIV"
                android:layout_width="@dimen/OptionImageViewWidth"
                android:layout_height="@dimen/OptionImageViewHeight"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/trainee" />



            <ImageView

                android:layout_below="@+id/traineeIV"

                android:layout_width="250dp"

                android:layout_height="250dp"

                android:layout_centerInParent="true"

                android:src="@drawable/trainee_text" />



        </RelativeLayout>



    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>